{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"functions": {
		"predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
	},
	"emulators": {
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"hosting": {
			"port": 5000
		},
		"ui": {
			"enabled": true
		}
	}
}
