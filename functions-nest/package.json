{
	"name": "functions",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"engines": {
		"node": "14"
	},
	"main": "dist/main.js",
	"scripts": {
		"prebuild": "rimraf dist",
		"functions:serve": "npm run build && firebase serve --only functions",
		"functions:shell": "npm run build && firebase functions:shell",
		"functions:start": "npm run functions:shell",
		"functions:deploy": "firebase deploy --only functions",
		"functions:logs": "firebase functions:log",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "npm run serve",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:up": "mikro-orm migration:up",
		"migration:create": "mikro-orm migration:create"
	},
	"dependencies": {
		"@mikro-orm/core": "^4.5.9",
		"@mikro-orm/nestjs": "^4.3.1",
		"@mikro-orm/postgresql": "^4.5.9",
		"@nestjs/common": "^8.0.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/passport": "^8.0.1",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/swagger": "^5.1.5",
		"@tfarras/nestjs-firebase-auth": "^2.0.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"firebase-admin": "^10.0.0",
		"firebase-functions": "^3.16.0",
		"nanoid": "^3.1.30",
		"nest-winston": "^1.6.1",
		"passport": "^0.5.2",
		"passport-jwt": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"winston": "^3.6.0"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^4.5.9",
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.1",
		"@types/nanoid": "^3.0.0",
		"@types/node": "^16.0.0",
		"@types/passport-jwt": "^3.0.6",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^27.2.5",
		"jest-node-exports-resolver": "^1.1.2",
		"prettier": "^2.3.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/$1"
		},
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/mikro-orm.config.ts",
			"./dist/mikro-orm.config.js"
		]
	}
}
